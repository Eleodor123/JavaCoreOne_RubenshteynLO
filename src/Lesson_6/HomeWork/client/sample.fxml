<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?scenebuilder-stylesheet /css/Styles.css?>

<VBox fx:id="genVBox" alignment="center" minHeight="800.0" minWidth="450.0" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Lesson_6.HomeWork.client.Controller">
    <stylesheets><URL value="@css/Styles.css" /></stylesheets>
    <TextArea fx:id="msgArea" editable="false" VBox.vgrow="ALWAYS" wrapText="true"/>
    <HBox fx:id="msgSendField" alignment="center" minHeight="40">
        <TextField fx:id="msgSendInput" onAction="#sendMSGToItem" promptText="Введите сообщение..." HBox.hgrow="ALWAYS" />
        <Button fx:id="msgSendButton" onAction="#sendMSGToItem" text="Send" HBox.hgrow="ALWAYS">
            <HBox.margin>
                <Insets right="8.0" />
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
